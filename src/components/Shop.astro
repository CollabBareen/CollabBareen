<div class="grid_img">


    <img src="../images/1.webp" class="slide-down" style="--endY: 0px;">
    <img src="../images/2.webp" class="slide-down" style="--endY: 35px;">
    <img src="../images/3.webp" class="slide-down" style="--endY: 50px;">
    <div class="text">Limited Bareen x <br>Roskilde Festival
    </div>
    <img src="../images/4.webp" class="slide-down" style="--endY: 50px;">
    <img src="../images/5.webp" class="slide-down" style="--endY: 30px;">
    <img src="../images/6.webp" class="slide-down" style="--endY: 0px;">
  </div>

  <style>
    .grid_img {
  display: grid;
  grid-template-columns: repeat(7, auto);
  gap: 10px;
  justify-content: center;
  margin-top: 100px;
  margin-bottom: 100px;
  width: 100%;
  margin: 40px;
 
}
.text{ align-self: center;
  font-size:
36px;
  font-weight: bold;
  padding: 10px;
  width: 100%;
  margin-right: 60px;
}
.grid_img img{
  width: 70%;
}

@keyframes slideFromTop {
  0% {
    transform: translateY(-150px);
    opacity: 0;
  }
  100% {
    transform: translateY(var(--endY, 0));
    opacity: 1;
  }
}

/* Initial state: hidden */
.slide-down {
  opacity: 0;
  transform: translateY(-150px);
  transition: transform 1s ease-in, opacity 1s ease-in;
}

/* When in view */
.slide-down.animate {
  animation: slideFromTop 1s ease-in forwards;
}
  </style>

  <script>// Observe elements with class "slide-img"
    const images = document.querySelectorAll('.slide-down');
    
    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate');
        }
      });
    }, {
      threshold: 0.5 // Trigger when 10% of the image is in view
    });
    
    images.forEach(img => observer.observe(img));
    </script>