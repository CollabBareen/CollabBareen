<style>
/* Global body styles */
body {
  margin: 0;
  font-family: 'Roboto', sans-serif;
  text-align: center;
}

/* Main hero container styling */
#container {
  padding-bottom: 150px;
    width: 100%;
  text-align: center;
  font-family: "Helvetica Neue", sans-serif;
  font-size: 48px;
  font-style: italic;
  font-weight: 700;
  line-height: 150%;
  letter-spacing: 14.4px;
  margin-bottom: 2rem;
}

/* Flip container: only shows one item at a time */
#flip {
  height: 65px;                /* Set fixed height to avoid jumping */
  overflow: hidden;            /* Hide overflowing text */
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;          /* Allows child items to be absolutely positioned */
}

/* Flip items - each word that animates */
#flip .flip-item {
  height: 65px;
  width: 100%;
  background: #fff;
  color: #000;
  display: flex;
  align-items: center;         /* Vertically center text */
  justify-content: center;     /* Horizontally center text */
  animation: flip 6s infinite; /* Run the animation */
  position: absolute;          /* All items stack on top of each other */
  top: 0;
  left: 0;
  opacity: 0;                  /* Hidden by default */
}

/* Set delay for each item so they animate in sequence */
#flip .flip-item:nth-child(1) {
  animation-delay: 0s;
}
#flip .flip-item:nth-child(2) {
  animation-delay: 2s;
}
#flip .flip-item:nth-child(3) {
  animation-delay: 4s;
}

/* Keyframes for fading and sliding each item */
@keyframes flip {
  0% { opacity: 0; transform: translateY(100%); }   /* Start below */
  10% { opacity: 1; transform: translateY(0); }     /* Slide in */
  30% { opacity: 1; transform: translateY(0); }     /* Stay visible */
  40% { opacity: 0; transform: translateY(-100%); } /* Slide out above */
  100% { opacity: 0; }                              /* Hidden for rest */
}

</style>
